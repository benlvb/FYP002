<div class="container">      
  <div class="omb_login">
    <h3 class="omb_authTitle">Login or <%= link_to "Sign Up",new_user_registration_path %></h3>
      <div class="row omb_row-sm-offset-3 omb_socialButtons">
        <div class="col-xs-4 col-sm-2">
          <%- if devise_mapping.omniauthable? %>
            <div class="btn btn-lg btn-block omb_btn-facebook">
              <i class="fa fa-facebook visible-xs"></i>
              <%= link_to "Facebook", omniauth_authorize_path(resource_name, :facebook) %>
            </div>
        </div>
        <div class="col-xs-4 col-sm-2">
          <div class="btn btn-lg btn-block omb_btn-twitter">
            <i class="fa fa-twitter visible-xs"></i>
            <%= link_to "Twitter", omniauth_authorize_path(resource_name, :twitter) %>
          </div>
        </div>
        <div class="col-xs-4 col-sm-2">
          <div class="btn btn-lg btn-block omb_btn-google">
            <i class="fa fa-google-plus visible-xs"></i>
            <%= link_to "Google+", omniauth_authorize_path(resource_name, :google_oauth2) %>
          </div>
        </div>
          <% end -%>
      </div>
      <br />

    <div class="row omb_row-sm-offset-3 omb_loginOr">
      <div class="col-xs-12 col-sm-6">
        <hr class="omb_hrOr">
        <span class="omb_spanOr">or</span>
      </div>
    </div>

        <div class="row omb_row-sm-offset-3">
          <div class="col-xs-12 col-sm-6">  
           <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password %><br />
              <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), class: "form-control" %>
            </div>

            

            <div class="form-group">
              <%= f.button :submit, "Sign In" , class:"btn btn-primary btn-lg btn-block"%>
            </div>

            
          </div>
        </div>

        <div class="row omb_row-sm-offset-3">
          <div class="col-xs-12 col-sm-3">
            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <%= f.check_box :remember_me %> <%= f.label :remember_me %>
              </div>
            <% end -%>
          </div>
          <div class="col-xs-12 col-sm-3">
            <p class="omb_forgotPwd">
              <%= link_to "Forgot Password?", new_password_path(resource_name) %>
            </p>
          </div>
        </div>


          <% end %>
            <%#= render "devise/shared/links" %>
  </div>  
</div>