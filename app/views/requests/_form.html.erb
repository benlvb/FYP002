<%= simple_nested_form_for @request, :html => { :multipart => true } do |f| %>

	<%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Choose a category" } %>

	<br />

	<%= f.fields_for :pictures do |p| %>
	  	<%= p.input :image, as: :file %>
	  	<%= p.hidden_field :_destroy %>
	  <%= p.link_to_remove "Remove this Image" %>
	  <% end %>
	<p><%= f.link_to_add "Add an Image", :pictures %></p>

	<%= f.input :title, label: "Title", placeholder: "Title" %>

	<%= f.input :matric_no, label: "Matrics Number", placeholder: "B012345678" %>

	<%= f.input :phone_no, label: "Phone Number (MY)", placeholder: "0123456789" %>

	<%= f.input :rate, label: "Rate per hour/day", placeholder: "20.00" %>

	<%= f.input :description, label: "Description", placeholder: "Tell us more" %>

	<%= f.button :submit %>
<% end %>
